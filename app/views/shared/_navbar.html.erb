<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.verified == true %>
          <li class="nav-item">
            <%= link_to "Home", favors_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Request a Favor", new_user_favor_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Invite a Friend", new_user_referral_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About Us", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://www.greenecountyfoundation.org/wp-content/uploads/2019/09/Profile-Icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.admin == true %>
                <%= link_to "Admin", users_path, class: "dropdown-item"  %>
              <% end %>
              <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "About Us", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item">
          <%= link_to "About Us", "#", class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
